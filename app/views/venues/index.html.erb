<%= render 'shared/banner' %>

<div class="container">
  <div class="row">
    <div class="col-4">
      <%= form_tag venues_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Venue"
      %>
    </div>
    <div class="col-2">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1>Venues</h1>
    </div>
  </div>
  <div class="row">
    <% @venues.each do |venue| %>
      <%= link_to venue, class: "col-12 col-sm-6 col-md-4" do %>
        <div class="card-product mb-4 box-shadow">
          <h2><%= venue.venue_name %></h2>
          <p><%= venue.city %></p> - <p><%= venue.post_code %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
