<%= render 'shared/banner' %>

<div class="container">
  <div class="row">
    <div class="col-4">
      <%= form_tag venues_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Venue"
      %>
    </div>
    <div class="col-2">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1>Venues</h1>
    </div>
  </div>
  <div class="row">
    <% @venues.each do |venue| %>
      <div class="col-12 col-sm-6 col-md-4">
        <img class="card-product-img" src="https://www.historic-uk.com/wp-content/uploads/2019/02/oldest-pub-in-england-2800x1440.jpg" />
          <div class="card-product box-shadow">
            <h2><%= venue.venue_name %></h2>
            <p><i class="fas fa-map-marker-alt"></i> <%= venue.city %>, <%= venue.post_code %></p>
              <div class="d-flex mt-2">
                <% venue.drinks_opportunities.each do |opportunity| %>
                  <div class="tag"> <%= Drink.find(opportunity.drink_id).name %></div>
                <% end %>
              </div>
          </div>
          <div class="d-flex mb-4">
            <%= link_to "Join Auction", venue_path(venue.id), class: "btn-auction" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
