<!-- Button trigger modal -->
<a type="" class="btn btn-auction" data-toggle="modal" data-target="#exampleModal">
  Create bid
</a>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create bid</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@drink_opportunity = @opportunity, @bid] do |f| %>
        <%= f.label "contract"%>
        <%= f.input :contract, label:false %>
        <%= f.label "Notes"%>
        <%= f.input :notes, placeholder: 'Insert the description of your offer here', label:false %>
        <%= f.label "Price"%>
        <%= f.input :price, placeholder: 'Insert your price in Â£', label:false %>
        <%= f.submit "Send your Bid", class: "btn btn-auction" %>
      <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
