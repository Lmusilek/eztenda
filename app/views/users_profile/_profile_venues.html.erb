<div class="row p-5">
  <div class="table-responsive">
    <table class="table">

      <tbody>
        <tr class="row-border">
          <td class="label">Venue Name:</td>
           <td class="label">Region:</td>
           <td class="label">City:</td>
           <td class="label">Postal code:</td>
           <td class="label"> </td>
           <td class="label"> </td>
        </tr>

       <% @venues.each do |venue| %>
         <% if current_user.id === venue.user_id %>
            <tr class="row-border">
              <td> <%= venue.venue_name %> </td>
              <td> <%= venue.region %> </td>
              <td> <%= venue.city%> </td>
              <td> <%= link_to "" , edit_venue_path(venue), class:"fas fa-pencil-alt", style:"margin-right:10px;"%> </td>
              <td> <%= link_to "" , venue_path(venue), class:"far fa-trash-alt", method: :delete %></td>
            </tr>
          <% end %>
        <% end %>

      </tbody>

    </table>
  </div>
</div>

